#include <Windows.h>
#define  STRINGIFY( s ) _STRINGIFY( s )
#define _STRINGIFY( s ) #s



//----------------------------------------------------------------------------//
// Version                                                                    //
//----------------------------------------------------------------------------//

VS_VERSION_INFO VERSIONINFO

	PRODUCTVERSION	2, 0, 0, TARGET_MODULE_VERSION
	   FILEVERSION	2, 0, 0, TARGET_MODULE_VERSION

	FILEFLAGSMASK	VS_FFI_FILEFLAGSMASK
#ifdef DEBUG
	FILEFLAGS		VS_FF_DEBUG
#else
	FILEFLAGS		0
#endif

	FILEOS			VOS_NT_WINDOWS32
	FILETYPE		VFT_STATIC_LIB

	BEGIN
		BLOCK "StringFileInfo"
		BEGIN
			BLOCK "000004B0"
			BEGIN

				VALUE "ProductName",		"robot-js"
				VALUE "FileDescription",	"robot-js"

				VALUE "ProductVersion",		"2.0.0." STRINGIFY (TARGET_MODULE_VERSION)
				VALUE    "FileVersion",		"2.0.0." STRINGIFY (TARGET_MODULE_VERSION)
				VALUE   "RobotVersion",		"2.0.0." "0"

				VALUE "CompanyName",		"Robot Developers"
				VALUE "OriginalFilename",	STRINGIFY (NODE_GYP_MODULE_NAME) ".node"

			END
		END

		BLOCK "VarFileInfo"
		BEGIN
			VALUE "Translation", 0x0000, 0x04B0
		END
	END
